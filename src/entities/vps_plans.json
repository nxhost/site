
{
  "name": "vps_plans",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["planId", "name", "cpu", "ram", "storage", "price", "active"],
        "properties": {
          "planId": {
            "bsonType": "string",
            "description": "Identificador único do plano VPS"
          },
          "name": {
            "bsonType": "string",
            "description": "Nome do plano VPS"
          },
          "cpu": {
            "bsonType": "int",
            "minimum": 1,
            "description": "Número de vCPUs"
          },
          "ram": {
            "bsonType": "int",
            "minimum": 1,
            "description": "Memória RAM em GB"
          },
          "storage": {
            "bsonType": "int",
            "minimum": 10,
            "description": "Armazenamento SSD em GB"
          },
          "bandwidth": {
            "bsonType": "string",
            "description": "Largura de banda disponível"
          },
          "price": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço mensal em reais"
          },
          "originalPrice": {
            "bsonType": "number",
            "description": "Preço original Contabo para referência"
          },
          "featured": {
            "bsonType": "bool",
            "description": "Plano em destaque"
          },
          "active": {
            "bsonType": "bool",
            "description": "Plano ativo para venda"
          },
          "description": {
            "bsonType": "string",
            "description": "Descrição do plano"
          },
          "features": {
            "bsonType": "array",
            "description": "Lista de recursos incluídos"
          },
          "creator": {
            "bsonType": "string",
            "description": "Criador do plano"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
