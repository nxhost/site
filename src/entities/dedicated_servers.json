
{
  "name": "dedicated_servers",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["serverId", "name", "cpu", "ram", "storage", "price", "active"],
        "properties": {
          "serverId": {
            "bsonType": "string",
            "description": "Identificador único do servidor"
          },
          "name": {
            "bsonType": "string",
            "description": "Nome do servidor dedicado"
          },
          "cpu": {
            "bsonType": "string",
            "description": "Processador do servidor"
          },
          "ram": {
            "bsonType": "int",
            "minimum": 8,
            "description": "Memória RAM em GB"
          },
          "storage": {
            "bsonType": "string",
            "description": "Configuração de armazenamento"
          },
          "bandwidth": {
            "bsonType": "string",
            "description": "Largura de banda disponível"
          },
          "price": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço mensal em reais"
          },
          "setupFee": {
            "bsonType": "number",
            "description": "Taxa de configuração inicial"
          },
          "featured": {
            "bsonType": "bool",
            "description": "Servidor em destaque"
          },
          "active": {
            "bsonType": "bool",
            "description": "Servidor ativo para venda"
          },
          "description": {
            "bsonType": "string",
            "description": "Descrição do servidor"
          },
          "features": {
            "bsonType": "array",
            "description": "Lista de recursos incluídos"
          },
          "dataCenter": {
            "bsonType": "string",
            "description": "Localização do data center"
          },
          "creator": {
            "bsonType": "string",
            "description": "Criador do servidor"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
