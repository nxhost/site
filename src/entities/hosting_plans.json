
{
  "name": "hosting_plans",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["planId", "name", "price", "active"],
        "properties": {
          "planId": {
            "bsonType": "string",
            "description": "ID único do plano de hospedagem"
          },
          "name": {
            "bsonType": "string",
            "description": "Nome do plano de hospedagem"
          },
          "description": {
            "bsonType": "string",
            "description": "Descrição do plano"
          },
          "price": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço mensal do plano"
          },
          "originalPrice": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço original antes do desconto"
          },
          "setupFee": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Taxa de configuração"
          },
          "storage": {
            "bsonType": "string",
            "description": "Espaço de armazenamento"
          },
          "bandwidth": {
            "bsonType": "string",
            "description": "Largura de banda"
          },
          "domains": {
            "bsonType": "string",
            "description": "Número de domínios"
          },
          "emails": {
            "bsonType": "string",
            "description": "Contas de email"
          },
          "features": {
            "bsonType": "array",
            "items": {
              "bsonType": "string"
            },
            "description": "Lista de recursos inclusos"
          },
          "featured": {
            "bsonType": "bool",
            "description": "Plano em destaque"
          },
          "active": {
            "bsonType": "bool",
            "description": "Plano ativo"
          },
          "creator": {
            "bsonType": "string",
            "description": "Criador do registro"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
