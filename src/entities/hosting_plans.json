
{
  "name": "hosting_plans",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["planId", "name", "type", "price", "storage", "bandwidth", "domains", "active"],
        "properties": {
          "planId": {
            "bsonType": "string",
            "description": "Identificador único do plano"
          },
          "name": {
            "bsonType": "string",
            "description": "Nome do plano de hospedagem"
          },
          "type": {
            "bsonType": "string",
            "enum": ["shared", "vps", "dedicated", "cloud"],
            "description": "Tipo de hospedagem"
          },
          "price": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço mensal em reais"
          },
          "storage": {
            "bsonType": "string",
            "description": "Espaço em disco (ex: 10GB, 100GB, 1TB)"
          },
          "bandwidth": {
            "bsonType": "string",
            "description": "Transferência mensal (ex: 100GB, ilimitado)"
          },
          "domains": {
            "bsonType": "int",
            "minimum": 1,
            "description": "Número de domínios permitidos"
          },
          "emails": {
            "bsonType": "int",
            "description": "Número de contas de email"
          },
          "databases": {
            "bsonType": "int",
            "description": "Número de bancos de dados MySQL"
          },
          "ssl": {
            "bsonType": "bool",
            "description": "SSL gratuito incluído"
          },
          "backup": {
            "bsonType": "bool",
            "description": "Backup automático incluído"
          },
          "support": {
            "bsonType": "string",
            "enum": ["basic", "priority", "premium"],
            "description": "Nível de suporte"
          },
          "active": {
            "bsonType": "bool",
            "description": "Plano ativo para venda"
          },
          "featured": {
            "bsonType": "bool",
            "description": "Plano em destaque"
          },
          "description": {
            "bsonType": "string",
            "description": "Descrição detalhada do plano"
          },
          "creator": {
            "bsonType": "string",
            "description": "Criador do plano"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
